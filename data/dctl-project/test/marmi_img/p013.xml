        <dctl:reuse xml:id="p013rp001" type="other">F. Marcolini, Sorti, Venezia, F. Marcolini,
         1550, c. B3r</dctl:reuse>
        <!-- Da collegare a Sorti_img_p005cc003 -->
        <dctl:reuse xml:id="p013rp002" type="self">A. F. Doni, Zucca en spa&#241;ol, Venezia,
         Marcolini, 1551, c. F4v</dctl:reuse>
        <!-- collegato a Zuccaesp010 -->
        <dctl:reuse xml:id="p013rp003" type="self">A. F. Doni, Zucca, in Id, Zucca, Venezia,
         Marcolini, 1551-1552, c. C3r</dctl:reuse>
        <!-- collegato a Zucca_img_p018lv122pg021 -->
       </dctl:reuseList>
       <!-- l'attributo TYPE="FOLLOWING" identifica il gruppo di (ri)usi successivi -->
       <dctl:reuseList type="following">
        <!-- l'elemento DCTL:REUSE è un (ri)uso dell'immagine da collegare tramite XML:ID con altro XML:ID secondo il metodo dei collegamenti già definito -->
