    <!-- [ CASO IMMAGINE IN PAGINA ] -->
    <!-- l'elemento TEI:DIV deve essere di tipo "dctlObject" in quanto scheda e non testo continuo -->
    <!-- l'attributo XML:ID deve comunque iniziare con la sintassi "pNNN" coincidente con il nome della partizione di package (nome del file precedente l'estensione ".xml") -->
    <!-- l'attributo N dovrebbe contenere un'etichetta identificativa della scheda, da utilizzare come ultima risorsa in caso di visualizzazione -->
    <!-- l'attributo CORRESP contiene, se presente, l'URI relativo all'anastatica -->
    <div type="dctlObject" xml:id="p020pt002pg117" n="II, p. 117"
     corresp="img://afd-marmi_p2_06.jpg">
     <!-- l'elemento TEI:PB, come TEI:LB, deve essere all'interno dell'elemento di cui eventualmente si vuole ricreare il riferimento -->
     <!-- collegato a Marmi_txt_p002f008 -->
     <pb n="117"/>
     <!-- l'elemento TEI:HEAD marca l'intestazione della scheda, ma è importante l'elemento INDEX/TERM che marca l'etichetta da utilizzare nella costruzione degli indici e dei riferimenti -->
     <head>
      <index>
       <term>II, p. 117</term>
      </index>
     </head>
     <!-- l'elemento TEI:BIBL (la cui sottostruttura di elementi è descritta nella documentazione TEI) definisce il "record bibliografico" della scheda -->
     <bibl>
      <publisher>Marcolini, Francesco</publisher>
      <pubPlace>Venezia</pubPlace>
      <date value="1552/1553-00-00">1552-1553</date>
      <distributor role="location">Bologna, Biblioteca Universitaria, A.V.N.VIII.14</distributor>
     </bibl>
     <!-- l'elemento TEI:FIGURE contiene l'elemento TEI:GRAPHIC (immagine) e l'elemento DCTL:STUDIO -->
     <figure>
      <graphic url="img://afd-marmi_p2_10_pw.jpg"/>
      <!-- l'elemento TEI:FIGDESC (obbligatorio) contiene l'etichetta che appare solo passando con il mouse sull'immagine -->
      <figDesc>Illustrazione dei Marmi, parte II, p. 117</figDesc>
      <!-- l'elemento DCTL:STUDIO -->
      <dctl:studio>
       <!-- l'elemento DCTL:DESC deve contenere la descrizione dettagliata dell'immagine -->
       <dctl:desc>Immagine cavalleresca, probabilmente ispirata all'Orlando Furioso. Scontro tra due
        paladini che si affrontano con le spade e con gli scudi. Sulla destra è visibile un gruppo
        di cavalieri, mentre sulla sinistra si distinguono degli arcieri, sullo sfondo delle case</dctl:desc>
       <!-- l'elemento DCTL:MEANING con attributo TYPE="original" deve contenere la descrizione del significato originario dell'immagine -->
       <dctl:meaning type="original">duello</dctl:meaning>
       <!-- l'elemento DCTL:MEANING con attributo TYPE="context" deve contenere la descrizione del significato contestuale dell'immagine -->
       <dctl:meaning type="context">colpo mortale inferto con la spada</dctl:meaning>
       <!-- l'elemento DCTL:TRANSCRIPTION deve contenere la trascrizione del testo presente nell'immagine -->
       <dctl:transcription>
        <lb/>Ene. Fu un bravo <seg ana="key_item" xml:id="p020ki001">abattimento</seg> quel del
        Puccini: et fu gran cosa certo (io mi ci tro<milestone unit="wb"/><lb/>vai), che 'l Puccino
        ficcasse lo <seg ana="key_item" xml:id="p020ki002">stocco</seg> ne' buchi della visiera del
        nimico et l'in<milestone unit="wb"/><lb/>cartasse sotto il ciglio; tant'è, egli l'amazzò.
        <lb/>Po. Fu un bestial colpo, a tagliar tanto della visiera che lo stocco passas<milestone
         unit="wb"/><lb/>si dentro a morte: una galiarda stoccata!</dctl:transcription>
       <!-- l'elemento DCTL:TYPOLOGY contiene la tipologia di immagine -->
       <dctl:typology type="print"/>
       <!-- l'elemento DCTL:TECHNIQUE contiene la tecnica di realizzazione dell'immagine -->
       <dctl:technique type="woodcut">xilografia</dctl:technique>
       <!-- l'elemento DCTL:MATERIAL contiene il materiale di supporto dell'immagine -->
       <dctl:material type="paper"/>
       <!-- l'elemento DCTL:MEASURE contiene le misure dell'immagine -->
       <dctl:measure>mm 36 x 63</dctl:measure>
       <!-- l'elemento DCTL:POSITION contiene il posizionamento dell'immagine -->
       <dctl:position>illustrazione posta a centro pagina, inclusa tra due porzioni di testo da essa
        ispirato</dctl:position>
       <!-- l'elemento DCTL:FRAME contiene la descrizione dell'eventuale cornice -->
       <dctl:frame>
        <!-- opzionale -->
        <dctl:desc>cornice xilografica riquadrata con conchiglie, festoni e visi antropomorfi</dctl:desc>
        <dctl:measure>mm 42 x 66 e 81 x 94</dctl:measure>
       </dctl:frame>
       <!-- l'elemento DCTL:MATRIX contiene la descrizione dell'eventuale matrice -->
       <dctl:matrix>
        <dctl:material type="wood"/>
        <dctl:technique type="woodcut"/>
        <dctl:measure><!-- mm ??? x ??? --></dctl:measure>
        <note place="apparatus" resp="editor" type="desc"><!-- eventuali note descrittive --></note>
        <bibl>
         <author><!-- opzionale --></author>
         <distributor role="location"><!-- XXX, YYY --></distributor>
        </bibl>
       </dctl:matrix>
       <!-- l'elemento DCTL:REUSELIST contiene l'elenco dei (ri)usi dell'immagine -->
       <!-- l'attributo TYPE="PRECEDING" identifica il gruppo di (ri)usi precedenti -->
       <dctl:reuseList type="preceding">
        <!-- l'elemento DCTL:REUSE è un (ri)uso dell'immagine da collegare tramite XML:ID con altro XML:ID secondo il metodo dei collegamenti già definito -->
        <!-- l'attributo TYPE="SELF" identifica il (ri)uso dell'immagine nello stesso "contesto" (autore) -->
        <dctl:reuse xml:id="p020rp001" type="other">M. M. Boiardo, Orlando innamorato, Venezia,
         Girolamo Scotto, 1545, c. V1r </dctl:reuse>
        <!-- collegato a Innamorato:p044 -->
        <dctl:reuse xml:id="p020rp002" type="other">M. M. Boiardo, Orlando innamorato, Venezia,
         Bartolomeo Imperatore, 1550, Libro I, canto VI, cc.?</dctl:reuse>
        <dctl:reuse xml:id="p020rp003" type="other">M. M. Boiardo, Orlando innamorato, Venezia,
         Bartolomeo Imperatore, 1550, Libro II, canto XIV, cc.?</dctl:reuse>
        <dctl:reuse xml:id="p020rp004" type="other">L. Ariosto, Orlando furioso, Venezia, Bartolomeo
         Imperatore, 1551, Canto XLIII, c. ?</dctl:reuse>
        <!-- verificare la carta -->
        <dctl:reuse xml:id="p019rp011" type="other">L. Ariosto, Orlando furioso, Venezia, Bartolomeo
         Imperatore, 1551, Canto XLV, c. ?</dctl:reuse>
        <!-- verificare la carta -->
       </dctl:reuseList>
       <!-- l'attributo TYPE="FOLLOWING" identifica il gruppo di (ri)usi successivi -->
       <dctl:reuseList type="following">
        <!-- l'elemento DCTL:REUSE è un (ri)uso dell'immagine da collegare tramite XML:ID con altro XML:ID secondo il metodo dei collegamenti già definito -->
        <!-- l'attributo TYPE="SELF" identifica il (ri)uso dell'immagine nello stesso "contesto" (autore) -->
        <dctl:reuse xml:id="p020rs001" type="other">V. Brusantini, Angelica innamorata, Venezia,
         Marcolini, 1553, c. C5r</dctl:reuse>
        <!-- collegato a Angelica_img_p007 -->
        <!-- l'attributo TYPE="OTHER" identifica il (ri)uso dell'immagine in altri "contesti" (autori) -->
        <dctl:reuse xml:id="p020rs002" type="other">L. Ariosto, Orlando furioso, Venezia,
         Rampazetto, 1564, c. P1r</dctl:reuse>
        <!-- collegato a rampazzetto64_p020 -->
        <dctl:reuse xml:id="p020rs003" type="other">L. Ariosto, Orlando furioso, Venezia,
         Rampazetto, 1564, c. MM7r</dctl:reuse>
        <!-- collegato a rampazzetto64_p045 -->
        <dctl:reuse xml:id="p020rs004" type="other">L. Ariosto, Orlando furioso, Venezia,
         Rampazetto, 1570, canto XXVII, c. ?</dctl:reuse>
       </dctl:reuseList>
       <!-- l'elemento DCTL:SOURCE identifica la fonte testuale -->
       <dctl:source>
        <bibl>
         <author>Ludovico Ariosto</author>
         <editor>E. Bigi</editor>
         <publisher>Rusconi</publisher>
         <pubPlace>Milano</pubPlace>
         <date value="1982-00-00">1982</date>
         <title>Orlando Furioso</title>
         <note place="foot" resp="editor">Di difficile interpretazione appare il passo dell'Orlando
          Furioso che ha ispirato l'immagine. La rappresentazione di un duello tra due paladini che
          si affrontano soltanto con le spade e con gli scudi fa pensare, confrontandola con altre
          edizioni illustrate del poema, al duello tra Ruggiero e Bradamante (XLV, 71 - 81)</note>
        </bibl>
       </dctl:source>
