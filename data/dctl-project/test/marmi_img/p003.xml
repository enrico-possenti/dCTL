        </bibl>
       </dctl:matrix>
       <!-- l'elemento DCTL:REUSELIST contiene l'elenco dei (ri)usi dell'immagine -->
       <!-- l'attributo TYPE="PRECEDING" identifica il gruppo di (ri)usi precedenti -->
       <dctl:reuseList type="preceding">
        <!-- l'elemento DCTL:REUSE è un (ri)uso dell'immagine da collegare tramite XML:ID con altro XML:ID secondo il metodo dei collegamenti già definito -->
        <!-- l'attributo TYPE="SELF" identifica il (ri)uso dell'immagine nello stesso "contesto" (autore) -->
        <dctl:reuse xml:id="p003rp001" type="other">F. Marcolini, Sorti, Venezia, Marcolini, 1550,
         c. B3v</dctl:reuse>
        <!-- collegato a Sorti_img:p006cc003 -->
       </dctl:reuseList>
       <!-- l'attributo TYPE="FOLLOWING" identifica il gruppo di (ri)usi successivi -->
       <dctl:reuseList type="following">
        <!-- l'elemento DCTL:REUSE è un (ri)uso dell'immagine da collegare tramite XML:ID con altro XML:ID secondo il metodo dei collegamenti già definito -->
        <!-- l'attributo TYPE="SELF" identifica il (ri)uso dell'immagine nello stesso "contesto" (autore) -->
        <dctl:reuse xml:id="p003rf001" type="self">A. F. Doni, Mondi, in Id., Mondi e Inferni,
         Venezia, Marcolini, 1552-1553, c. 17r</dctl:reuse>
        <!-- collegato a Mondi_img:p015 -->
        <dctl:reuse xml:id="p003rf002" type="other">D. Laerzio, Compendio delle Vite, Venezia,
         Brugnolo, 1598, c. B4v</dctl:reuse>
        <dctl:reuse xml:id="p003rf003" type="other">D. Laerzio, Compendio delle Vite, Venezia,
         Brugnolo, 1598, c. M1v</dctl:reuse>
       </dctl:reuseList>
       <!-- l'elemento DCTL:SOURCE identifica la fonte testuale -->
       <dctl:source>
        <bibl>
         <author>Diogenes Laertius</author>
         <publisher>Bompiani</publisher>
         <pubPlace>Milano</pubPlace>
         <date value="2005-00-00">2005</date>
         <title>Vite e dottrine dei più celebri filosofi</title>
         <editor>a cura di Giovanni Reale</editor>
         <extent>Libro I, cop. XI, &#167; 116, p. 129</extent>
         <seg><lb/>[Profezie di Ferecide] <lb/>Molte cose sorprendenti si dicono su di lui. In
           particola<milestone unit="wb"/><lb/>re, mentre passeggiava lungo la spiaggia di Samo,
          quando <lb/>vide una nave che correva grazie al vento, disse che dopo <lb/>non molto tempo
          sarebbe affondata: ed essa affondò davanti ai suoi occhi.</seg>
        </bibl>
       </dctl:source>
