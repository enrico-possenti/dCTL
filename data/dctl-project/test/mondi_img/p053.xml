        <dctl:measure>mm 10 x 93 ca.</dctl:measure>
        <dctl:desc>fregio xilografico con basamento architettonico e un viso umano</dctl:desc>
        <dctl:measure>mm 14 x 93 ca.</dctl:measure>
        <dctl:desc>fregio xilografico con un fregio architettonico e un volto angelico</dctl:desc>
       </dctl:frame>
       <!-- l'elemento DCTL:MATRIX contiene la descrizione dell'eventuale matrice -->
