       <dctl:iconTerm key="000357">cespugli, arbusti</dctl:iconTerm>
       <dctl:iconTerm key="000318">indicare</dctl:iconTerm>
       <dctl:iconTerm key="000400">sole</dctl:iconTerm>
       <dctl:iconTerm key="000304">figure umane sedute</dctl:iconTerm>
       <dctl:iconTerm key="000038">albero</dctl:iconTerm>
       <dctl:iconTerm key="000310">tronco d'albero</dctl:iconTerm>
       </dctl:studio>
     </figure>
