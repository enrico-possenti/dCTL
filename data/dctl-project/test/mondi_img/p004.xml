       <dctl:iconTerm key="000429">Cristo</dctl:iconTerm>
       <dctl:iconTerm key="000430">Cristo, con il vessillo in mano, sorge dal sepolcro</dctl:iconTerm>
       <dctl:iconTerm key="000243">uomo</dctl:iconTerm>
       <dctl:iconTerm key="000243">uomo nudo</dctl:iconTerm>
