    <!-- [ CASO IMMAGINE IN PAGINA ] -->
    <!-- l'elemento TEI:DIV deve essere di tipo "dctlObject" in quanto scheda e non testo continuo -->
    <!-- l'attributo XML:ID deve comunque iniziare con la sintassi "pNNN" coincidente con il nome della partizione di package (nome del file precedente l'estensione ".xml") -->
    <!-- l'attributo N dovrebbe contenere un'etichetta identificativa della scheda, da utilizzare come ultima risorsa in caso di visualizzazione -->
    <!-- l'attributo CORRESP contiene, se presente, l'URI relativo all'anastatica -->
    <div type="dctlObject" xml:id="p019mn001cc022" n="Mondo piccolo, c. 22v"
     corresp="img://afd-mondi_023r.jpg">
     <!-- l'elemento TEI:PB, come TEI:LB, deve essere all'interno dell'elemento di cui eventualmente si vuole ricreare il riferimento -->
     
     <pb label="c" n="22v" />
     <!-- l'elemento TEI:HEAD marca l'intestazione della scheda, ma è importante l'elemento INDEX/TERM che marca l'etichetta da utilizzare nella costruzione degli indici e dei riferimenti -->
     <head>
      <index>
       <term>Mondo piccolo, c. 22v</term>
      </index>
     </head>
     <!-- l'elemento TEI:BIBL (la cui sottostruttura di elementi è descritta nella documentazione TEI) definisce il "record bibliografico" della scheda -->
     <bibl>
      <publisher>Marcolini, Francesco</publisher>
      <pubPlace>Venezia</pubPlace>
      <date value="1552/1553-00-00">1552-1553</date>
      <distributor role="location">Biblioteca Universitaria, Bologna</distributor>
     </bibl>
     <!-- l'elemento TEI:FIGURE contiene l'elemento TEI:GRAPHIC (immagine) e l'elemento DCTL:STUDIO -->
     <figure>
      <graphic url="img://afd-mondi_023r_pw.jpg" />
      <!-- l'elemento TEI:FIGDESC (obbligatorio) contiene l'etichetta che appare solo passando con il mouse sull'immagine -->
      <figDesc>Solone</figDesc>
      <!-- l'elemento DCTL:STUDIO -->
      <dctl:studio>
       <!-- l'elemento DCTL:DESC deve contenere la descrizione dettagliata dell'immagine -->
       <dctl:desc>Solone, rappresentato di spalle, è raffigurato al cospetto del re Creso seduto su un trono sotto un baldacchino. Sulla destra sono rappresentati fagiani e pavoni. Sullo sfondo è visibile una città</dctl:desc>
       <!-- l'elemento DCTL:MEANING con attributo TYPE="original" deve contenere la descrizione del significato originario dell'immagine -->
       <dctl:meaning type="original">La risposta sagace di Solone a Creso</dctl:meaning>
       <!-- l'elemento DCTL:MEANING con attributo TYPE="context" deve contenere la descrizione del significato contestuale dell'immagine -->
       <dctl:meaning type="context">Elogio della vita semplice condotta secondo natura</dctl:meaning>
       <!-- l'elemento DCTL:TRANSCRIPTION deve contenere la trascrizione del testo presente nell'immagine -->
       <dctl:transcription><lb/>La <seg ana="key_item" xml:id="p019ki001">natura</seg> si contenta di poco, et il contentarsi di poco è un <lb/><seg ana="key_item" xml:id="p019ki002">boccone</seg> non conosciuto,
        sì come il desiderare assai et non l'a<milestone unit="wb"/>
        <lb/>vere è uno strano convito. Se noi vivessimo secondo la
        natu<milestone unit="wb"/>
        <lb/>ra, non saremmo mai poveri.</dctl:transcription>
       <!-- l'elemento DCTL:TYPOLOGY contiene la tipologia di immagine -->
       <dctl:typology type="print" />
       <!-- l'elemento DCTL:TECHNIQUE contiene la tecnica di realizzazione dell'immagine -->
       <dctl:technique type="woodcut">xilografia</dctl:technique>
       <!-- l'elemento DCTL:MATERIAL contiene il materiale di supporto dell'immagine -->
       <dctl:material type="paper" />
       <!-- l'elemento DCTL:MEASURE contiene le misure dell'immagine -->
       <dctl:measure>mm 62 x 94</dctl:measure>
       <!-- l'elemento DCTL:POSITION contiene il posizionamento dell'immagine -->
       <dctl:position>Nella parte superiore della pagina, a seguito del testo ad essa ispirato</dctl:position>
       <!-- l'elemento DCTL:FRAME contiene la descrizione dell'eventuale cornice -->
       <dctl:frame>
        <dctl:measure>mm 10 x 93</dctl:measure>
        <dctl:desc>fregio xilografico con basamento architettonico e un viso umano</dctl:desc>
        <dctl:measure>mm 14 x 93</dctl:measure>
        <dctl:desc>fregio xilografico con capitello al quale sono attaccati cinque visi umani, i due
         estremi barbuti</dctl:desc>
       </dctl:frame>
       <!-- l'elemento DCTL:MATRIX contiene la descrizione dell'eventuale matrice -->
       <dctl:matrix>
        <dctl:desc>...</dctl:desc>
        <dctl:material type="wood" />
        <dctl:technique type="woodcut" />
        <dctl:measure><!-- mm ??? x ??? --></dctl:measure>
        <note place="apparatus" resp="editor" type="desc"><!-- eventuali note descrittive --></note>
        <bibl>
         <author><!-- opzionale --></author>
         <distributor role="location"><!-- XXX, YYY --></distributor>
        </bibl>
       </dctl:matrix>
       <!-- l'elemento DCTL:REUSELIST contiene l'elenco dei (ri)usi dell'immagine -->
       <!-- l'attributo TYPE="PRECEDING" identifica il gruppo di (ri)usi precedenti -->
       <dctl:reuseList type="preceding">
        <!-- l'elemento DCTL:REUSE è un (ri)uso dell'immagine da collegare tramite XML:ID con altro XML:ID secondo il metodo dei collegamenti già definito -->
        <!-- l'attributo TYPE="SELF" identifica il (ri)uso dell'immagine nello stesso "contesto" (autore) -->
        <dctl:reuse xml:id="p019rp001" type="other">F. Marcolini, Le ingeniose sorti, Venezia, Marcolini, 1550, c. G1v</dctl:reuse>
       </dctl:reuseList>
       <!-- l'attributo TYPE="FOLLOWING" identifica il gruppo di (ri)usi successivi -->
       <dctl:reuseList type="following">
        <!-- l'elemento DCTL:REUSE è un (ri)uso dell'immagine da collegare tramite XML:ID con altro XML:ID secondo il metodo dei collegamenti già definito -->
        <!-- l'attributo TYPE="SELF" identifica il (ri)uso dell'immagine nello stesso "contesto" (autore) -->
        <dctl:reuse xml:id="pNNNYYYY" type="self" />
        <!-- l'attributo TYPE="OTHER" identifica il (ri)uso dell'immagine in altri "contesti" (autori) -->
        <dctl:reuse xml:id="pNNNYYYYZZZZ" type="other" />
       </dctl:reuseList>
       <!-- l'elemento DCTL:SOURCE identifica la fonte testuale -->
       <dctl:source>
        <bibl>
         <author>Diogenes Laertius</author>
         <publisher>Bompiani</publisher>
         <pubPlace>Milano</pubPlace>
         <date value="2005-00-00">2005</date>
         <title>Vite e dottrine dei più celebri filosofi</title>
         <editor>a cura di Giovanni Reale</editor>
         <extent>Libro I, cap. III, &#167; 51, p. 53</extent>
         <seg><lb/>[Viaggi di Solone e fondazione della città di Soli]
         <lb/>E dicono alcuni che Creso, dopo essersi adornato di <lb/>tutto punto ed essersi assiso sul trono, gli abbia domandato
          <lb/>se avesse mai visto uno spettacolo più bello; e Solone rispo<milestone unit="wb"/>
          <lb/>se: &#171;I galli fagiani e i pavoni; infatti, sono adornati di una <lb/>avvenenza naturale e mille volte più bella&#187;.</seg>
        </bibl>
       </dctl:source>
       <!-- l'elemento DCTL:ICONTERM contiene la codifica dei codici Iconclass -->
       <dctl:iconTerm key="000477">Solone</dctl:iconTerm>
       <dctl:iconTerm key="000476">Creso</dctl:iconTerm>
       <dctl:iconTerm key="000013">uomini</dctl:iconTerm>
       <dctl:iconTerm key="000025">re</dctl:iconTerm>
       <dctl:iconTerm key="000308">uccelli</dctl:iconTerm>
       <dctl:iconTerm key="000474">uccelli ornamentali: pavoni</dctl:iconTerm>
       <dctl:iconTerm key="000475">uccelli ornamentali: fagiani</dctl:iconTerm>
       <dctl:iconTerm key="000287">veduta di città</dctl:iconTerm>
       <dctl:iconTerm key="000026">scala (parte di casa o edificio)</dctl:iconTerm>
       <dctl:iconTerm key="000363">trono</dctl:iconTerm>
       <dctl:iconTerm key="000379">baldacchino</dctl:iconTerm>
       <dctl:iconTerm key="000318">indicare</dctl:iconTerm>
      </dctl:studio>
     </figure>
