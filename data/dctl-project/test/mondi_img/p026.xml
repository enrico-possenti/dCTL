       <dctl:iconTerm key="000023">scudi</dctl:iconTerm>
       <dctl:iconTerm key="000496">nastri</dctl:iconTerm>
       <dctl:iconTerm key="000497">stemma mediceo</dctl:iconTerm>
       <dctl:iconTerm key="000498">stemma cittadino</dctl:iconTerm>
     </dctl:studio>
     </figure>
     <!-- l'elemento TEI:NOTE contiene le note -->
     <note type="desc" resp="editor" place="apparatus"><!-- note descrittive --></note>
     <!-- l'elemento TEI:NOTE contiene le note -->
     <note type="studio" resp="editor" place="apparatus"><!-- note di studio --></note>
